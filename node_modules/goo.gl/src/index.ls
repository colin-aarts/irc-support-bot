
#	goo.gl
#	------
#	Shorten a URL using Google's goo.gl service
#	Depends on the 'googleapis' module

'use strict'


google = require 'googleapis'


module.exports = (uri, api-key, cb) ->

	err, result <~ google.urlshortener 'v1' .url.insert do
		auth: api-key
		resource:
			long-url: uri

	cb err, result
